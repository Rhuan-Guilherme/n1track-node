generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  ADMIN
  USER
  SUPER
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  role       Roles    @default(USER)
  created_at DateTime @default(now())
  is_active  Boolean  @default(true)
  Tickets    Ticket[]

  @@map("users")
}

enum Types {
  CHAMADO
  REITERACAO
  TRANSFERENCIA
  QUEDA
}

enum Status {
  ABERTO
  FECHADO
}

model Ticket {
  id String @id @default(uuid())

  name         String
  login        String
  ramal        String
  local        String
  informacao   String
  patrimono    String
  chamado      String
  destinatario String

  area       String
  status     Status
  created_at DateTime @default(now())
  type       Types
  vip        Boolean

  user      User    @relation(fields: [userId], references: [id])
  userId    String
  userName  String
  isDeleted Boolean @default(false)

  @@map("tickets")
}

model StfUsers {
  id       String  @id @default(uuid())
  login    String  @unique
  name     String
  cargo    String
  area     String
  telefone String
  vip      Boolean @default(false)

  @@map("stfusers")
}
